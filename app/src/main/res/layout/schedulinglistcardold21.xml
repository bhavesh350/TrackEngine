<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="280dp"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginBottom="@dimen/_10sdp"
    android:paddingBottom="@dimen/_10sdp"
    card_view:cardCornerRadius="@dimen/_10sdp"
    card_view:cardElevation="@dimen/_10sdp">

    <Toolbar
        android:id="@+id/card_toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/pendinglayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ffffff"
        android:paddingBottom="@dimen/_1sdp">

        <RelativeLayout
            android:id="@+id/topLayout2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="#D6D7D7">

            <ImageButton
                android:id="@+id/mb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/abc_ic_menu_overflow_material"
                android:typeface="serif" />

            <TextView
                android:id="@+id/cntctprsnmob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/contactpersonname"
                android:layout_alignBottom="@+id/contactpersonname"
                android:layout_toStartOf="@+id/mb"
                android:layout_toLeftOf="@+id/mb"
                android:text="9718729555"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#667171"
                android:textSize="@dimen/_10ssp"
                android:typeface="serif" />

            <TextView
                android:id="@+id/contactpersonname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="11dp"
                android:layout_marginLeft="11dp"
                android:text="Vaishali"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#0d0d0d"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold|italic"
                android:typeface="serif" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/bottomLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:background="#D6D7D7"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/_5sdp">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="@dimen/_10sdp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_18sdp"
                android:layout_marginLeft="@dimen/_18sdp"
                android:layout_weight="1.5"
                android:text="Status: "
                android:textSize="@dimen/_10ssp" />

            <TextView
                android:id="@+id/status"
                android:layout_width="@dimen/_10sdp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="New"
                android:textSize="@dimen/_10ssp"
                android:typeface="serif" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="@dimen/_10sdp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_17sdp"
                android:layout_marginRight="@dimen/_17sdp"
                android:layout_weight="2"
                android:text="SLA Time:"
                android:textSize="@dimen/_10ssp"
                android:typeface="serif" />

            <TextView
                android:id="@+id/beontime"
                android:layout_width="@dimen/_10sdp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="11:30 AM"
                android:textColor="#667171"
                android:textSize="@dimen/_10ssp"
                android:typeface="serif" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/topLayout2"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="@dimen/_5sdp"
            android:orientation="vertical"
            android:paddingLeft="@dimen/_25sdp"
            android:paddingTop="@dimen/_10sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp">

                <TextView
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="IssueId"
                    android:textColor="#000"
                    android:textSize="@dimen/_10ssp"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <TextView
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight=".5"
                    android:gravity="center"
                    android:text=":"
                    android:textColor="#000"
                    android:textSize="@dimen/_10ssp"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/issueId_Id"
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:text="New Text"
                    android:textColor="#000"
                    android:textSize="@dimen/_10ssp"
                    android:typeface="serif"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="Alotted Task"
                    android:textColor="#000"
                    android:textSize="@dimen/_10ssp"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <TextView
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight=".5"
                    android:gravity="center"
                    android:text=":"
                    android:textColor="#000"
                    android:textSize="@dimen/_10ssp"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/subject"
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:text="New Text"
                    android:textColor="#000"
                    android:textSize="@dimen/_10ssp"
                    android:typeface="serif"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/adress"
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:text="Location:"
                    android:textColor="#000"
                    android:textSize="@dimen/_10ssp"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <TextView
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight=".5"
                    android:gravity="center"
                    android:text=":"
                    android:textColor="#000"
                    android:textSize="@dimen/_10ssp"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/adrs"
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:text="New Text"
                    android:textColor="#000"
                    android:textSize="@dimen/_10ssp"
                    android:typeface="serif"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/schedule_date"
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:text="Schedule Date :"
                    android:textColor="#000"
                    android:textSize="@dimen/_10ssp"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <TextView
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight=".5"
                    android:gravity="center"
                    android:text=":"
                    android:textColor="#000"
                    android:textSize="@dimen/_10ssp"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/schedule_date_value"
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:text="New Text"
                    android:textColor="#000"
                    android:textSize="@dimen/_10ssp"
                    android:typeface="serif"

                    />
            </LinearLayout>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/floatingActionButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginBottom="@dimen/_11sdp"
                android:layout_weight="1"
                android:clickable="true"
                android:padding="@dimen/_5sdp"
                android:tint="#2b2929"
                android:visibility="gone"
                card_view:backgroundTint="#fff"
                card_view:fabSize="mini"
                card_view:rippleColor="#e96412"
                card_view:srcCompat="@android:drawable/ic_menu_upload" />
        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>
