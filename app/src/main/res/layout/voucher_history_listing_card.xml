<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="@dimen/_10sdp"
    android:paddingBottom="@dimen/_10sdp"
    card_view:cardCornerRadius="@dimen/_10sdp"
    android:layout_marginBottom="@dimen/_10sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/tktvoucherlayout"
        android:background="@drawable/cardbk_blue">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_15sdp">

            <TextView
                android:text="Voucher Number"
                android:textColor="#000"
                android:id="@+id/id_VHNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#667171"
                android:layout_gravity="bottom"
                android:id="@+id/voucherview"
                android:layout_below="@+id/date"
                android:layout_centerHorizontal="true"></RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_gravity="center">

            <TextView
                android:layout_width="@dimen/_10sdp"
                android:layout_height="wrap_content"
                android:text="Date"
                android:layout_weight="3"
                android:textColor="#000"
                android:textStyle="bold"
                android:typeface="serif"
                android:id="@+id/textView18" />

            <TextView
                android:text=":"
                android:layout_width="@dimen/_10sdp"
                android:layout_weight=".5"
                android:textColor="#000"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:typeface="serif"/>
            <TextView
                android:layout_width="@dimen/_10sdp"
                android:layout_height="wrap_content"
                android:typeface="serif"
                android:text="New Text"
                android:id="@+id/id_VHdate"
                android:layout_weight="4"
                android:textColor="#000"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_gravity="center">

            <TextView
                android:layout_width="@dimen/_10sdp"
                android:layout_height="wrap_content"
                android:text="Action"
                android:layout_weight="3"
                android:textColor="#000"
                android:textStyle="bold"
                android:typeface="serif"/>
            <TextView
                android:text=":"
                android:layout_width="@dimen/_10sdp"
                android:layout_weight=".5"
                android:textColor="#000"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:typeface="serif"/>

            <TextView
                android:layout_width="@dimen/_10sdp"
                android:layout_height="wrap_content"
                android:typeface="serif"
                android:text="New Text"
                android:layout_weight="4"
                android:textColor="#000"
                android:id="@+id/id_VHaction" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_gravity="center">

            <TextView
                android:layout_width="@dimen/_10sdp"
                android:layout_height="wrap_content"
                android:text="Done By"
                android:layout_weight="3"
                android:textColor="#000"
                android:textStyle="bold"
                android:typeface="serif"/>
            <TextView
                android:text=":"
                android:layout_width="@dimen/_10sdp"
                android:layout_weight=".5"
                android:textColor="#000"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:typeface="serif"/>

            <TextView
                android:layout_width="@dimen/_10sdp"
                android:layout_height="wrap_content"
                android:typeface="serif"
                android:text="New Text"
                android:layout_weight="4"
                android:textColor="#000"
                android:id="@+id/id_VHdoneby" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_10sdp">

            <TextView
                android:layout_width="@dimen/_10sdp"
                android:layout_height="wrap_content"
                android:text="Remark"
                android:layout_weight="3"
                android:textColor="#000"
                android:textStyle="bold"
                android:typeface="serif"
                android:id="@+id/textView16" />

            <TextView
                android:text=":"
                android:layout_width="@dimen/_10sdp"
                android:layout_weight=".5"
                android:textColor="#000"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:typeface="serif"/>

            <TextView
                android:layout_width="@dimen/_10sdp"
                android:layout_height="wrap_content"
                android:typeface="serif"
                android:text="New Text"
                android:layout_weight="4"
                android:textColor="#000"
                android:id="@+id/id_VHremarks"
                />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>