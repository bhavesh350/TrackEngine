<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="@dimen/_10sdp"
    android:paddingBottom="@dimen/_10sdp"

    card_view:cardCornerRadius="@dimen/_10sdp"
    android:layout_marginBottom="@dimen/_10sdp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/tktsynclayout"
        android:background="@drawable/cardbk_blue">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_15sdp">

            <TextView
                android:text="Ticket Number"
                android:textColor="#000"
                android:id="@+id/id_TNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#667171"
                android:layout_gravity="bottom"
                android:id="@+id/view"
                android:layout_below="@+id/date"
                android:layout_centerHorizontal="true"></RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_gravity="center">

            <TextView
                android:layout_width="@dimen/_10sdp"
                android:layout_height="wrap_content"
                android:text="Status"
                android:layout_weight="3"
                android:textColor="#000"
                android:textStyle="bold"
                android:typeface="serif"/>
            <TextView
                android:text=":"
                android:layout_width="@dimen/_10sdp"
                android:layout_weight=".5"
                android:textColor="#000"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:typeface="serif"/>
            <TextView
                android:layout_width="@dimen/_10sdp"
                android:layout_height="wrap_content"
                android:typeface="serif"
                android:text="New Text"
                android:id="@+id/id_status"
                android:layout_weight="4"
                android:textColor="#000"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_10sdp"
            android:id="@+id/comment_layoutId">

            <TextView
                android:layout_width="@dimen/_10sdp"
                android:layout_height="wrap_content"
                android:text="Comment"
                android:layout_weight="2.6"
                android:textColor="#000"
                android:textStyle="bold"
                android:typeface="serif"/>
            <TextView
                android:text=":"
                android:layout_width="@dimen/_10sdp"
                android:layout_weight=".5"
                android:textColor="#000"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:typeface="serif"/>
            <TextView
                android:layout_width="@dimen/_10sdp"
                android:layout_height="wrap_content"
                android:typeface="serif"
                android:text="New Text"
                android:id="@+id/id_comment"
                android:layout_weight="4"
                android:textColor="#000"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bottomLayout"
            android:orientation="horizontal"
            android:padding="@dimen/_1sdp">

            <TextView
                android:layout_width="@dimen/_10sdp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="11:30 AM"
                android:layout_gravity="right"
                android:gravity="right"
                android:textColor="#000"
                android:id="@+id/id_date"
                android:layout_marginBottom="@dimen/_10sdp"
                android:typeface="serif"
                />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
