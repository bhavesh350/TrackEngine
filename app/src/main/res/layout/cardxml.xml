<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    card_view:cardCornerRadius="@dimen/_10sdp"
    card_view:cardElevation="@dimen/_20sdp"
    android:layout_marginTop="@dimen/_5sdp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/cardbk_purple">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/_15ssp"
                android:text="Ticket Id:"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_15ssp"
                android:text=""
                android:id="@+id/textView2"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Alotted Task: "
                android:id="@+id/t1"
                android:layout_weight="1"

                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Alotted Task"
                android:ellipsize="none"
                android:scrollHorizontally="false"
                android:id="@+id/subject" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Location:"
                android:layout_weight="1"
                android:id="@+id/adress"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Address: "
                android:layout_weight="3"
                android:maxLines="100"
                android:id="@+id/adrs"
                android:ellipsize="none"
                android:scrollHorizontally="false"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp">
                 <TextView
                    android:text="Status:"
                    android:layout_width="@dimen/_10sdp"
                    android:layout_weight="2"
                     android:gravity="left"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="New"
                    android:layout_width="@dimen/_10sdp"
                    android:layout_weight="2"
                    android:gravity="left"
                    android:layout_height="wrap_content"
                    android:id="@+id/newtktstatus"/>
                <TextView
                    android:layout_width="@dimen/_10sdp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="SLA Time:"
                    android:textColor="#667171"
                    android:gravity="left"
                    />
                <TextView
                    android:layout_width="@dimen/_10sdp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="11:30 AM"
                    android:id="@+id/beontime"
                    android:textColor="#667171"
                    android:gravity="left"
                     />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/_12sdp"
                android:padding="1dp"
                android:gravity="center"
                android:layout_gravity="center">
                <android.support.design.widget.FloatingActionButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:layout_weight="2"
                    android:layout_marginRight="@dimen/_25sdp"
                    card_view:backgroundTint="#f20b0b"
                    android:elevation="@dimen/_6sdp"
                    card_view:fabSize="mini"
                    card_view:srcCompat="@drawable/cross"
                    android:visibility="visible"
                    android:id="@+id/reject"/>

                <android.support.design.widget.FloatingActionButton
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:clickable="true"
                    card_view:fabSize="mini"
                    android:visibility="visible"
                    card_view:srcCompat="@drawable/tickwhite"
                    android:id="@+id/accept"
                    card_view:elevation="@dimen/_6sdp" />
            </LinearLayout>
</LinearLayout>
</android.support.v7.widget.CardView>