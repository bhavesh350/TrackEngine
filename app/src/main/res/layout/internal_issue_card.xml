<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="@dimen/_10sdp"
    android:paddingBottom="@dimen/_10sdp"

    card_view:cardCornerRadius="@dimen/_10sdp"
    android:layout_marginBottom="@dimen/_10sdp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:background="@drawable/cardbk_blue">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_15sdp">

        <TextView
            android:text="Createddate"
            android:textColor="#000"
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#667171"
            android:layout_gravity="bottom"
            android:id="@+id/view"
            android:layout_below="@+id/date"
            android:layout_centerHorizontal="true"></RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_gravity="center">

        <TextView
            android:layout_width="@dimen/_10sdp"
            android:layout_height="wrap_content"
            android:text="IssueId"
            android:layout_weight="3"
            android:textColor="#000"
            android:textStyle="bold"
            android:typeface="serif"/>
        <TextView
            android:text=":"
            android:layout_width="@dimen/_10sdp"
            android:layout_weight=".5"
            android:textColor="#000"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:typeface="serif"/>
        <TextView
            android:layout_width="@dimen/_10sdp"
            android:layout_height="wrap_content"
            android:typeface="serif"
            android:text="New Text"
            android:id="@+id/issueId_Id"
            android:layout_weight="4"
            android:textColor="#000"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_gravity="center">

        <TextView
            android:layout_width="@dimen/_10sdp"
            android:layout_height="wrap_content"
            android:text="Description"
            android:layout_weight="3"
            android:textColor="#000"
            android:textStyle="bold"
            android:typeface="serif"/>
        <TextView
            android:text=":"
            android:layout_width="@dimen/_10sdp"
            android:layout_weight=".5"
            android:textColor="#000"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:typeface="serif"/>
        <TextView
            android:layout_width="@dimen/_10sdp"
            android:layout_height="wrap_content"
            android:typeface="serif"
            android:text="New Text"
            android:id="@+id/desc_Id"
            android:layout_weight="4"
            android:textColor="#000"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_15sdp"
        android:orientation="horizontal">
        <android.support.design.widget.TextInputLayout
            android:layout_width="@dimen/_10sdp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginTop="@dimen/_10sdp">

            <EditText
                android:id="@+id/commentEditText"
                android:layout_width="match_parent"
                android:typeface="serif"
                android:layout_height="wrap_content"
                android:hint="Comment" />
        </android.support.design.widget.TextInputLayout>
        <ImageView
            android:layout_width="@dimen/_10sdp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_menu_send"
            android:tint="#0bd226"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:id="@+id/sendImageView"
            android:layout_marginRight="@dimen/_25sdp"
            android:layout_weight=".1" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottomLayout"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="@dimen/_1sdp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="Status: "
            android:layout_width="@dimen/_10sdp"
            android:layout_weight="1.5"
            android:textColor="#000"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:layout_marginLeft="@dimen/_18sdp"
            android:layout_marginStart="@dimen/_18sdp" />
        <TextView
            android:text="New"
            android:layout_width="@dimen/_10sdp"
            android:layout_weight="2"
            android:textColor="#000"
            android:layout_height="wrap_content"
            android:typeface="serif"
            android:id="@+id/status"/>

        <TextView
            android:layout_width="@dimen/_10sdp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:typeface="serif"
            android:textColor="#000"
            android:text="Last Modified:"
            android:id="@+id/textView4"
            android:layout_marginRight="@dimen/_17sdp"
            android:layout_marginEnd="@dimen/_17sdp" />

        <TextView
            android:layout_width="@dimen/_10sdp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:text="11:30 AM"
            android:textColor="#000"
            android:id="@+id/lastmodifieddate"
            android:typeface="serif"
            />
    </LinearLayout>
</LinearLayout>

</android.support.v7.widget.CardView>
