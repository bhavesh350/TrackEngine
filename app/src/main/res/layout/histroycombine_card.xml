<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_5sdp"
    card_view:cardCornerRadius="@dimen/_10sdp"
    android:elevation="@dimen/_100sdp"
    card_view:cardBackgroundColor="#00ffffff"
    android:layout_marginLeft="@dimen/_5sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp">

        <TextView
            android:text="Deveice Id"
            android:typeface="serif"
            android:textSize="@dimen/_18ssp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/deveiceidHistory" />

        <TextView
            android:text="Battery Level"
            android:textSize="@dimen/_18ssp"
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_height="wrap_content"
            android:id="@+id/batteryHistory"
            android:layout_alignParentTop="true"/>
        <TextView
            android:text="AutoCaptured"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:typeface="serif"
            android:layout_marginBottom="@dimen/_5sdp"
            android:textSize="@dimen/_18ssp"
            android:id="@+id/autoCapruredHistory"

            />
        <TextView
            android:text="Updated On: 21/3/2014"
            android:gravity="right"
            android:textColor="#fff"
            android:textSize="@dimen/_15ssp"
            android:layout_marginRight="3dp"
            android:background="#254250"
            android:typeface="serif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dateHistory" />

    </LinearLayout>
</android.support.v7.widget.CardView>