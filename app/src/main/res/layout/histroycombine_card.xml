<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_5sdp"
    android:elevation="@dimen/_100sdp"
    card_view:cardBackgroundColor="#00ffffff"
    card_view:cardCornerRadius="@dimen/_10sdp"
    card_view:cardPreventCornerOverlap="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/deveiceidHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_5sdp"
            android:text="Deveice Id"
            android:textSize="@dimen/_18ssp"
            android:typeface="serif" />

        <TextView
            android:id="@+id/batteryHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="@dimen/_5sdp"
            android:text="Battery Level"
            android:textSize="@dimen/_18ssp" />

        <TextView
            android:id="@+id/autoCapruredHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_5sdp"
            android:text="AutoCaptured"
            android:textSize="@dimen/_18ssp"
            android:typeface="serif" />

        <TextView
            android:id="@+id/dateHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:background="#254250"
            android:gravity="center"
            android:text="Updated On: 21/3/2014"
            android:textColor="#fff"
            android:textSize="@dimen/_15ssp"
            android:typeface="serif" />

    </LinearLayout>
</android.support.v7.widget.CardView>