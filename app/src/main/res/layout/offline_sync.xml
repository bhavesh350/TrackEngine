<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <Button
        android:text="Forced Sync"
        android:layout_width="@dimen/_10sdp"
        android:layout_height="wrap_content"
        android:id="@+id/IdForcedSync"
        android:typeface="serif"
        android:drawableRight="@android:drawable/stat_notify_sync"
        android:drawableTint="#000"
        android:background="#00ffffff"
        android:layout_weight="1"/>
    <Button
        android:text="Clear Data"
        android:layout_width="@dimen/_10sdp"
        android:typeface="serif"
        android:layout_height="wrap_content"
        android:drawableRight="@android:drawable/ic_menu_delete"
        android:drawableTint="#000"
        android:layout_weight="1"
        android:background="#03ffffff"
        android:id="@+id/idClearData" />
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sync_view"
        android:scrollbars="vertical"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_11sdp">
    </android.support.v7.widget.RecyclerView>



</LinearLayout>