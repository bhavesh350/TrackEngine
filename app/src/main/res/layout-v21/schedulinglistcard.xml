<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="280dp"
    card_view:cardElevation="@dimen/_10sdp"
    android:paddingBottom="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_5sdp"
    card_view:cardCornerRadius="@dimen/_10sdp"
    android:layout_marginBottom="@dimen/_10sdp">
    <Toolbar  android:id="@+id/card_toolbar"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/pendinglayout"
        android:paddingBottom="@dimen/_1sdp"
        android:background="#ffffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="#D6D7D7"
        android:id="@+id/topLayout2"
        android:layout_marginBottom="@dimen/_10sdp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mb"
            android:typeface="serif"
            android:src="@drawable/abc_ic_menu_overflow_material"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="9718729555"
            android:textColor="#667171"
            android:textSize="@dimen/_10ssp"
            android:id="@+id/cntctprsnmob"
            android:typeface="serif"
            android:layout_alignBottom="@+id/contactpersonname"
            android:layout_toLeftOf="@+id/mb"
            android:layout_toStartOf="@+id/mb"
            android:layout_alignTop="@+id/contactpersonname" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Vaishali"
            android:textSize="@dimen/_10ssp"
            android:textStyle="bold|italic"
            android:typeface="serif"
            android:textColor="#0d0d0d"
            android:id="@+id/contactpersonname"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bottomLayout"
            android:orientation="horizontal"
            android:padding="@dimen/_5sdp"
            android:gravity="center"
            android:background="#D6D7D7"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:text="Status: "
                android:layout_width="@dimen/_10sdp"
                android:layout_weight="1.5"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:textSize="@dimen/_10ssp"
                android:layout_marginLeft="@dimen/_18sdp"
                android:layout_marginStart="@dimen/_18sdp" />
            <TextView
                android:text="New"
                android:layout_width="@dimen/_10sdp"
                android:textSize="@dimen/_10ssp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:typeface="serif"
                android:id="@+id/status"/>

            <TextView
                android:layout_width="@dimen/_10sdp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_10ssp"
                android:typeface="serif"
                android:text="SLA Time:"
                android:id="@+id/textView4"
                android:layout_marginRight="@dimen/_17sdp"
                android:layout_marginEnd="@dimen/_17sdp" />

            <TextView
                android:layout_width="@dimen/_10sdp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:text="11:30 AM"
                android:textSize="@dimen/_10ssp"
                android:textColor="#667171"
                android:id="@+id/beontime"
                android:typeface="serif"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/_10sdp"
            android:id="@+id/a"
            android:layout_marginBottom="@dimen/_5sdp"
            android:paddingLeft="@dimen/_25sdp"
            android:layout_below="@+id/topLayout2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp">

                <TextView
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="wrap_content"
                    android:text="IssueId"
                    android:layout_weight="3"
                    android:textSize="@dimen/_10ssp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:typeface="serif"/>
                <TextView
                    android:text=":"
                    android:layout_width="@dimen/_10sdp"
                    android:layout_weight=".5"
                    android:textColor="#000"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_10ssp"
                    android:typeface="serif"/>
                <TextView
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="wrap_content"
                    android:typeface="serif"
                    android:text="New Text"
                    android:id="@+id/issueId_Id"
                    android:layout_weight="4"
                    android:textSize="@dimen/_10ssp"
                    android:textColor="#000"

                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp">

                <TextView
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="wrap_content"
                    android:text="Alotted Task"
                    android:layout_weight="3"
                    android:textSize="@dimen/_10ssp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:typeface="serif"
                    android:id="@+id/textView3" />

                <TextView
                    android:text=":"
                    android:layout_width="@dimen/_10sdp"
                    android:layout_weight=".5"
                    android:textColor="#000"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_10ssp"
                    android:typeface="serif"/>
                <TextView
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="wrap_content"
                    android:typeface="serif"
                    android:id="@+id/subject"
                    android:text="New Text"
                    android:layout_weight="4"
                    android:textSize="@dimen/_10ssp"
                    android:textColor="#000"

                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="wrap_content"
                    android:text="Location:"
                    android:id="@+id/adress"
                    android:typeface="serif"
                    android:layout_weight="3"
                    android:layout_gravity="center"
                    android:textSize="@dimen/_10ssp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    />
                <TextView
                    android:text=":"
                    android:layout_width="@dimen/_10sdp"
                    android:layout_weight=".5"
                    android:textColor="#000"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_10ssp"
                    android:typeface="serif"/>
                <TextView
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/adrs"
                    android:typeface="serif"
                    android:layout_weight="4"
                    android:textSize="@dimen/_10ssp"
                    android:textColor="#000"

                    />
            </LinearLayout>
            <android.support.design.widget.FloatingActionButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                card_view:fabSize="mini"
                card_view:srcCompat="@android:drawable/ic_menu_upload"
                card_view:rippleColor="#e96412"
                card_view:backgroundTint="#fff"
                android:layout_weight="1"
                android:visibility="gone"
                android:tint="#2b2929"
                android:layout_gravity="left"
                android:padding="@dimen/_5sdp"
                android:id="@+id/floatingActionButton"
                android:layout_marginBottom="@dimen/_11sdp" />
        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>
